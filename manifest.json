{
  "manifest_version": 2,

  "name": "simple2ch",
  "description": "Making the webpage version of 2ch a little bit easy to use.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*.2ch.net/*/", "https://*.2ch.net/*/", "http://*.2ch.sc/*/", "https://*.2ch.sc/*/"],
      "js": ["line-feed.js"]
    },
    {
      "matches": ["http://*.2ch.net/*/subback.html", "https://*.2ch.net/*/subback.html", "http://*.2ch.sc/*/subback.html", "https://*.2ch.sc/*/subback.html"],
      "js": ["all-thread-line-feed.js"]
    }
  ]
}

