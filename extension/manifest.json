{
  "manifest_version": 2,

  "name": "simple2ch",
  "description": "Making the webpage version of 2ch a little bit easy to use.",
  "version": "0.2",

  "browser_action": {
    "default_icon": {
      "19": "icon/icon19.png",
      "38": "icon/icon38.png"
    },
    "default_popup": "popup.html"
  },

  "background": {
  "scripts": ["background.js"]
  },
  
  "permissions":[
    "tabs", "http://*.2ch.net/*", "https://*.2ch.net/*"
  ]
}
